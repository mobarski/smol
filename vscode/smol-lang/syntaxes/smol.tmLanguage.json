{
    "name": "Smol",
    "fileTypes": [".smol",".asm"],
    "patterns": [
        {
            "match": "\\b(def)\\b",
            "name": "meta.preprocessor.smol"
        },
        {
            "match": "\\b(if|return|call|break|halt|stop)\\b",
            "name": "keyword.control.smol"
        },
        {
            "match": "\\b(fi|else|then)\\b",
            "name": "keyword.control.smol"
        },
        {
            "match": "\\b(log|assert)\\b",
            "name": "support.function.smol"
        },
        {
            "match": "[$][a-z0-9.?!-]+:",
            "name": "entity.name.section.smol"
        },
	{
		"match": "\\b[-]?[0-9_]+\\b",
		"name": "constant.numeric"
	},
        {
            "match": "[a-z0-9.?!-]+[:]",
            "name": "entity.name.smol"
        },
	{
		"match": "[>][a-z0-9.?!-]+",
		"name": "storage.smol"
	},

        {
            "match": "[#][^\n]*",
            "name": "comment.line.documentation.smol"
        },
        {
            "match": "\\([^)]+\\)",
            "name": "comment.block.documentation.smol"
        },
        {
            "match": "[{][^}]+[}]",
            "name": "comment.block.documentation.smol"
        },
        {
            "match": "\\[[^\\]]+\\]",
            "name": "comment.block.documentation.smol"
        }
    ],
    "scopeName": "source.smol"
}
